<Window x:Class="ImpulseLive.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImpulseLive.WPF"
        xmlns:vm="clr-namespace:ImpulseLive.WPF.ViewModels"
        mc:Ignorable="d"
        Title="直播间冲动消费挑战" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:BooleanToYesNoConverter x:Key="BooleanToYesNoConverter"/>
        
        <!-- 卡片阴影效果 -->
        <DropShadowEffect x:Key="CardShadow" BlurRadius="15" ShadowDepth="5" Color="#000000" Opacity="0.5"/>
    </Window.Resources>
    
    <!-- 显式设置DataContext -->
    <Window.DataContext>
        <vm:GameViewModel x:Name="ViewModel"/>
    </Window.DataContext>
    
    <Grid Background="#2C3E50">
        <!-- 菜单视图 - 确保始终可见 -->
        <Grid Name="MenuGrid" Visibility="Visible">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="#2C3E50">
                <TextBlock Text="直播间冲动消费挑战" FontSize="48" FontWeight="Bold" Foreground="#ECF0F1" TextAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="体验数字经济中的消费心理" FontSize="24" Foreground="#BDC3C7" TextAlignment="Center" Margin="0,0,0,20"/>
                <Button Content="开始挑战" Click="StartGameButton_Click" FontSize="24" Width="200" Height="60"
                        Background="#E74C3C" Foreground="White" BorderBrush="Transparent" FontWeight="Bold" Margin="0,0,0,20"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="初始资金: $1000" FontSize="16" Foreground="#95A5A6"/>
                    <TextBlock Text=" | " FontSize="16" Foreground="#95A5A6"/>
                    <TextBlock Text="理性值: 100" FontSize="16" Foreground="#95A5A6"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        
        <!-- 游戏视图 -->
        <Grid Name="GameGrid" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 顶部状态栏 -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#34495E" Margin="20">
                <StackPanel Margin="0,0,40,0">
                    <TextBlock Text="资金" FontSize="16" Foreground="#BDC3C7"/>
                    <TextBlock Text="{Binding Player.Money, StringFormat='${0}'}" FontSize="24" FontWeight="Bold" Foreground="#2ECC71"/>
                </StackPanel>
                <StackPanel Margin="0,0,40,0">
                    <TextBlock Text="理性值" FontSize="16" Foreground="#BDC3C7"/>
                    <ProgressBar Value="{Binding Player.Rationality}" Maximum="100" Width="200" Height="20" Foreground="#3498DB"/>
                </StackPanel>
                <StackPanel Margin="0,0,40,0">
                    <TextBlock Text="欲望值" FontSize="16" Foreground="#BDC3C7"/>
                    <TextBlock Text="{Binding Player.Desire}" FontSize="24" FontWeight="Bold" Foreground="#E74C3C"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="回合" FontSize="16" Foreground="#BDC3C7"/>
                    <TextBlock Text="{Binding Round}" FontSize="24" FontWeight="Bold" Foreground="#ECF0F1"/>
                </StackPanel>
            </StackPanel>
            
            <!-- 中间商品区域 -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 倒计时 - 左侧 -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                    <TextBlock Text="剩余时间" FontSize="24" FontWeight="Bold" Foreground="#ECF0F1" TextAlignment="Center"/>
                    <TextBlock Text="{Binding RemainingTime}" FontSize="120" FontWeight="Bold" Foreground="#E74C3C" TextAlignment="Center"/>
                </StackPanel>
                
                <!-- 商品卡片 - 右侧 -->
                <Border Grid.Column="1" Background="#34495E" CornerRadius="15" Padding="30" 
                        HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="600"
                        Effect="{StaticResource CardShadow}" BorderBrush="#2C3E50" BorderThickness="1">
                    <StackPanel>
                        <!-- 商品名称 -->
                        <TextBlock Text="{Binding CurrentProduct.Name}" FontSize="28" FontWeight="Bold" 
                                   Foreground="#ECF0F1" TextAlignment="Center" Margin="0,0,0,5"
                                   TextWrapping="Wrap"/>
                        
                        <!-- 话术等级文字描述 -->
                        <TextBlock Text="{Binding CurrentProduct.RhetoricDescription}" FontSize="16" 
                                   Foreground="#F39C12" TextAlignment="Center" Margin="0,0,0,20"/>
                        
                        <!-- 商品信息网格 - 紧凑布局 -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 左侧信息 -->
                            <StackPanel Grid.Column="0" VerticalAlignment="Top">
                                <!-- 价格（突出显示） -->
                                <StackPanel Margin="0,0,0,15">
                                    <TextBlock Text="价格" FontSize="14" Foreground="#BDC3C7" Margin="0,0,0,3"/>
                                    <TextBlock Text="{Binding CurrentProduct.Price, StringFormat='${0}'}" 
                                               FontSize="28" FontWeight="Bold" Foreground="#E74C3C"/>
                                </StackPanel>
                                
                                <!-- 已售数量 -->
                                <StackPanel>
                                    <TextBlock Text="已售" FontSize="14" Foreground="#BDC3C7" Margin="0,0,0,3"/>
                                    <TextBlock Text="{Binding CurrentProduct.SoldCount, StringFormat=N0}" 
                                               FontSize="20" Foreground="#ECF0F1"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- 右侧信息 -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                <!-- 话术等级 -->
                                <StackPanel Margin="0,0,0,15">
                                    <TextBlock Text="话术等级" FontSize="14" Foreground="#BDC3C7" Margin="0,0,0,3"/>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding CurrentProduct.RhetoricLevel}" 
                                                   FontSize="28" FontWeight="Bold" Foreground="#F39C12" 
                                                   Margin="0,0,10,0"/>
                                        <StackPanel Orientation="Horizontal" Margin="0">
                                            <!-- 简化处理，直接使用固定颜色 -->
                                            <Ellipse Width="10" Height="10" Fill="#F39C12" Margin="0,0,3,0"/>
                                            <Ellipse Width="10" Height="10" Fill="#F39C12" Margin="0,0,3,0"/>
                                            <Ellipse Width="10" Height="10" Fill="#F39C12" Margin="0,0,3,0"/>
                                            <Ellipse Width="10" Height="10" Fill="Gray" Margin="0,0,3,0"/>
                                            <Ellipse Width="10" Height="10" Fill="Gray"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                                
                                <!-- 分期选项 -->
                                <StackPanel>
                                    <TextBlock Text="分期" FontSize="14" Foreground="#BDC3C7" Margin="0,0,0,3"/>
                                    <Border Background="#E74C3C" 
                                            CornerRadius="5" Padding="8" Width="60" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding CurrentProduct.HasInstallment, Converter={StaticResource BooleanToYesNoConverter}}" 
                                                   FontSize="16" Foreground="White" FontWeight="Bold"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- 底部按钮区域 -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
                <Button Content="立即购买" Command="{Binding BuyCommand}" FontSize="24" Width="200" Height="60"
                        Background="#E74C3C" Foreground="White" BorderBrush="Transparent" FontWeight="Bold" Margin="0,0,20,0"/>
                <Button Content="加入购物车" Command="{Binding HesitateCommand}" IsEnabled="{Binding CanUseHesitate}" FontSize="24" Width="200" Height="60"
                        Background="#F39C12" Foreground="White" BorderBrush="Transparent" FontWeight="Bold" Margin="0,0,20,0"/>
                <Button Content="不买" Command="{Binding RefuseCommand}" FontSize="24" Width="200" Height="60"
                        Background="#2ECC71" Foreground="White" BorderBrush="Transparent" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
        
        <!-- 结果视图 -->
        <Grid Name="ResultGrid" Visibility="Collapsed">
            <StackPanel Margin="40">
                <TextBlock Text="结算分析" FontSize="36" FontWeight="Bold" Foreground="#ECF0F1" TextAlignment="Center" Margin="0,0,0,20"/>
                
                <!-- 玩家统计 -->
                <Border Background="#34495E" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="玩家数据" FontSize="20" FontWeight="Bold" Foreground="#ECF0F1" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="剩余资金" FontSize="14" Foreground="#BDC3C7" Margin="0,0,0,3"/>
                                <TextBlock Text="{Binding Player.Money, StringFormat='${0}'}" FontSize="20" Foreground="#2ECC71" Margin="0,0,0,10"/>
                                <TextBlock Text="理性值" FontSize="14" Foreground="#BDC3C7" Margin="0,0,0,3"/>
                                <TextBlock Text="{Binding Player.Rationality}" FontSize="20" Foreground="#3498DB"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="购买次数" FontSize="14" Foreground="#BDC3C7" Margin="0,0,0,3"/>
                                <TextBlock Text="{Binding Player.BuyCount}" FontSize="20" Foreground="#E74C3C" Margin="0,0,0,10"/>
                                <TextBlock Text="犹豫次数" FontSize="14" Foreground="#BDC3C7" Margin="0,0,0,3"/>
                                <TextBlock Text="{Binding Player.HesitateCount}" FontSize="20" Foreground="#F39C12"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="拒绝次数" FontSize="14" Foreground="#BDC3C7" Margin="0,0,0,3"/>
                                <TextBlock Text="{Binding Player.RefuseCount}" FontSize="20" Foreground="#2ECC71" Margin="0,0,0,10"/>
                                <TextBlock Text="欲望值" FontSize="14" Foreground="#BDC3C7" Margin="0,0,0,3"/>
                                <TextBlock Text="{Binding Player.Desire}" FontSize="20" Foreground="#E74C3C"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- 分析结论 -->
                <Border Background="#34495E" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="心理分析" FontSize="20" FontWeight="Bold" Foreground="#ECF0F1" Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding AnalysisResults}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="16" Foreground="#F39C12" Margin="3"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                
                <!-- 返回菜单按钮 -->
                <Button Content="返回菜单" Command="{Binding ReturnToMenuCommand}" FontSize="20" Width="180" Height="50"
                        Background="#3498DB" Foreground="White" BorderBrush="Transparent" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
